<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/tvRegitser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎注册XXX"
            android:textColor="#fff"
            android:textSize="20sp"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/ibCream"
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cream"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:orientation="horizontal"            
            android:columnCount="4"
            >
           <TextView 
               android:id="@+id/tvRUser"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="用户名"
               android:textColor="#fff"
               android:textSize="18sp"
               android:layout_marginTop="10dp"
               android:gravity="center"
               /> 
               <EditText 
                   android:id="@+id/etRUserName"
                   android:layout_gravity="fill_horizontal"
                   android:layout_columnSpan="3"
                   android:hint="请填写用户名"
               	   android:textColor="#fff"
               	   android:textStyle="italic"
               android:layout_marginTop="10dp"
                   />
               
           <TextView 
               android:id="@+id/tvRNickName"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="昵称"
               android:textColor="#fff"
               android:textSize="18sp"
               /> 
               <EditText 
                   android:id="@+id/etRNickName"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="fill_horizontal"
                   android:layout_columnSpan="3"
                   android:hint="请填写昵称"
               	   android:textColor="#fff"
               	   android:textStyle="italic"
                   />
               
           <TextView 
               android:id="@+id/tvRPwd"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="密码"
               android:textColor="#fff"
               android:textSize="18sp"
               /> 
               <EditText 
                   android:id="@+id/etRPwd"
               	   android:layout_marginTop="10dp"
                   android:layout_gravity="fill_horizontal"
                   android:layout_columnSpan="3"
                   android:hint="请填写密码"
               	   android:textColor="#fff"
               	   android:textStyle="italic"
                   />
               
           <TextView 
               android:id="@+id/tvRRePwd"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="确认密码"
               android:textColor="#fff"
               android:textSize="18sp"
               /> 
               <EditText 
                   android:id="@+id/etRRePwd"
               	   android:layout_marginTop="10dp"
                   android:layout_gravity="fill_horizontal"
                   android:layout_columnSpan="3"
                   android:hint="请重新输入密码"
               	   android:textColor="#fff"
               	   android:textStyle="italic"
                   />
              <Button 
                  android:id="@+id/btnRegister"
               	  android:layout_marginTop="10dp"
                  android:layout_columnSpan="4"
                  android:layout_gravity="fill_horizontal"
                  android:background="@drawable/login"
                  android:text="注册"
                  /> 
        </GridLayout>
    </LinearLayout>
</LinearLayout>